\documentclass[a4paper]{article}

\usepackage{graphicx}
\usepackage{tabularx}
\usepackage[margin=1in]{geometry}

\begin{document}

\begin{tabularx}{\textwidth}{|l|l|l|X|}
  \hline
  Naam & Foto & Aantal & Locatie \\ \hline
  <% item[:materiaal].each do |stock| %>
      <%= stock[:naam] %> & 
      <% if stock[:foto] and File.file?("content/fotos/"+stock[:foto])%>
        \includegraphics[width=2cm, height=2cm, keepaspectratio]{content/fotos/<%= stock[:foto] %>} & 
      <% else %>
        Geen Foto &
      <% end %>
      <%= stock[:aantal] %> & 
      <%= stock[:locatie] %> 
      \\ \hline
  <%end%>
\end{tabularx}

\end{document}
